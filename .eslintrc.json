{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn"
  },
  "overrides": [
    {
      "files": ["*.vue"],
      "parser": "vue-eslint-parser",
      "parserOptions": {
        "parser": "@babel/parser",
        "sourceType": "module"
      },
      "rules": {
        "vue/multi-word-component-names": "off",
        "vue/no-v-model-args": "off"
      }
    }
  ]
}
